CLOUDINARY_SECRET=replace_me

# Google Cloud Storage upload
GCS_BUCKET_NAME=replace_me
GCS_BASE_PATH=
GCS_BASE_URL=
GCS_PUBLIC_FILES=true
GCS_UNIFORM=false
# JSON string (single line)
