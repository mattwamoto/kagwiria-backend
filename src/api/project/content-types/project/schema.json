{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "summary": {
      "type": "text",
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["planning", "active", "completed"],
      "required": true,
      "default": "planning"
    },
    "bodyRichText": {
      "type": "richtext",
      "required": true
    },
    "heroAsset": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"],
      "required": true
    },
    "galleryAssets": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "cta": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::cta-config.cta-config"
    },
    "seoMeta": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::seo-page-meta.seo-page-meta"
    }
  }
}
