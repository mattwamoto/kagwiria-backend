ADMIN_JWT_SECRET=replace_me
TRANSFER_TOKEN_SALT=replace_me
JWT_SECRET=replace_me
ENCRYPTION_KEY=replace_me

# External Postgres (required for docker-compose setup)
DATABASE_CLIENT=postgres
DATABASE_HOST=your-postgres-host
DATABASE_PORT=5432
DATABASE_NAME=your-database-name
DATABASE_USERNAME=your-database-user
DATABASE_PASSWORD=your-database-password
DATABASE_SSL=false
# Optional: if your provider gives a full connection string, set this too.
# DATABASE_URL=postgres://user:password@host:5432/dbname

# Publisher / scheduled publish
CRON_ENABLED=true
PUBLISHER_SYNC_FREQUENCY=*/1 * * * *

# Media upload provider: local | cloudinary | gcs
UPLOAD_PROVIDER=local

# Cloudinary upload
CLOUDINARY_NAME=replace_me
